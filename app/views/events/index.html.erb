
<h1>All events : Total <%= @events.count %> events</h1>

<div>
    <%= button_to 'Add a new log', new_event_path, method: :get %>
    <%= button_to 'ALL Parsed Logs', parsers_path, method: :get %>
</div>
<br/><br/>

<div>
<% @events.each do |event|%>
<li><span style="color:blue;">  creation: <%= event.datetime %>  </span> <span style="color:crimson;"> </li> 
<li> <span style="color:blue;"> Total <%= event.comments.count %> comments </span> </li>

<li><%= event.data %></li>
<%= button_to 'Parse Log', event_path(event), method: :get %>
<%= button_to 'Delete', event_path(event), method: :delete %><br/><br/>
<% end %>
</div>



